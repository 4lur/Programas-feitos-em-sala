#include <iostream>
#include <iomanip>
using namespace std;

//inicio da função principal
int main()
{
    //calcular o peso de um objeto
    // p = m * GRAVIDADE
    float p, m;
    const float GRAVIDADE = 9.8;

    cout<<"Informe sua massa: ";
    cin >> m;
    
    p = m * GRAVIDADE;

    cout << "PESO eh igual: "<< p << endl;
    
    return 0;
}
